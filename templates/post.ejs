<html>
  <head>
    <%- include('./includes/head', { siteTitle: `${post.title} | ${themeConfig.siteName}` }) %>
  </head>

  <body>
    <div class="hd posts">
      <a href="/">
        <svg class="replay-btn" viewBox="0 0 1159 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" width="16" height="16"><path d="M512 0L0 512l512 512L660.54321 874.403292 403.489712 617.349794h756.411523v-210.699588H403.489712l257.053498-258.106996L512 0z" fill="#ffffff"></path></svg>
      </a>
      <div class="post-title">
        <p><%= post.title %></p>
        <hr>
      </div>
      <div class="post-content">
        <%- post.content %>
      </div>

      <% if (site.customConfig.comment != ' ') { %>
        <br><br>
        <% var path = './includes/comments/' + site.customConfig.comment %>
        <%- include(path) %>
      <% } else if (typeof commentSetting !== 'undefined' && commentSetting.showComment) { %>
        <% if (commentSetting.commentPlatform === 'gitalk') { %>
          <%- include('./includes/gitalk') %>
        <% } %>

        <% if (commentSetting.commentPlatform === 'disqus') { %>
          <%- include('./includes/disqus') %>
        <% } %>
      <% } %>

    </div>
    <%- include('./includes/footer') %>
  </body>
</html>
